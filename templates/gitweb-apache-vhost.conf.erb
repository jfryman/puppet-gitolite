# ************************************
# Gitweb template in module git
# Managed by Puppet
# ************************************

<VirtualHost *:80>
    ServerName <%= vhost %>
    DocumentRoot "<%= scope.lookupvar('git::params::gt_gitweb_root') %>"
    DirectoryIndex <%= scope.lookupvar('git::params::gt_gitweb_binary') %>
    SetEnv  GITWEB_CONFIG   /etc/gitweb.conf

    <Directory "<%= scope.lookupvar('git::params::gt_gitweb_root') %>">
        Options FollowSymlinks ExecCGI
        Allow from all
        AllowOverride all
        Order allow,deny

        <Files <%= scope.lookupvar('git::params::gt_gitweb_binary') %>>
            SetHandler cgi-script
        </Files>

        RewriteEngine on
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteCond %{REQUEST_FILENAME} !-d
        RewriteRule ^.* /<%= scope.lookupvar('git::params::gt_gitweb_binary') %>/$0 [L,PT]    
    </Directory>

    <Directory "<%= scope.lookupvar('git::params::gt_repo_dir') %>">
      Allow from all
    </Directory>

    LogLevel warn
    ServerSignature Off
    ErrorLog <%= scope.lookupvar('git::params::gt_httpd_var_dir') %>/<%= vhost %>_error.log
    CustomLog <%= scope.lookupvar('git::params::gt_httpd_var_dir') %>/<%= vhost %>_access.log combined
</VirtualHost>
